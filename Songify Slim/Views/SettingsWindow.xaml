<controls:MetroWindow
    x:Class="Songify_Slim.Views.Window_Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Songify_Slim.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Settings"
    Width="745"
    Height="473"
    MinWidth="647"
    MinHeight="400"
    Closing="MetroWindow_Closing"
    Loaded="SettingsWindow_Loaded"
    ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <controls:MetroWindow.Resources>
        <Style
            x:Key="TextBoxTextBlock"
            BasedOn="{StaticResource {x:Type TextBox}}"
            TargetType="TextBox">
            <Style.Setters>
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Margin" Value="0,0,0,0" />
                <Setter Property="Padding" Value="0,0,0,0" />
                <Setter Property="MinHeight" Value="0" />
                <Setter Property="Height" Value="18" />
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent4}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </controls:MetroWindow.Resources>
    <Grid>
        <TabControl Margin="10,0,10,0" TabStripPlacement="Left">
            <TabItem Header="{x:Static local:Resources.sw_tc_System}">
                <Border
                    Margin="10,0,0,0"
                    BorderBrush="{DynamicResource MahApps.Brushes.Accent3}"
                    BorderThickness="2,0,0,0">
                    <Grid Margin="10,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label
                            Padding="0,5,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static local:Resources.sw_tcSystem_lblLanguage}" />
                        <Label
                            Grid.Row="0"
                            Margin="0,13,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static local:Resources.sw_tcSystem_translated}"
                            FontSize="9"
                            FontStyle="Italic" />
                        <ComboBox
                            x:Name="CbxLanguage"
                            Grid.Row="0"
                            Width="220"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            SelectionChanged="ComboBox_SelectionChanged">
                            <ComboBoxItem Content="{x:Static local:Resources.lang_en}" />
                            <ComboBoxItem Content="{x:Static local:Resources.lang_deDE}" />
                            <ComboBoxItem Content="{x:Static local:Resources.lang_ru}" />
                            <ComboBoxItem Content="{x:Static local:Resources.lang_es}" />
                            <ComboBoxItem Content="{x:Static local:Resources.lang_fr}" />
                            <ComboBoxItem Content="{x:Static local:Resources.lang_pl}" />
                            <ComboBoxItem Content="{x:Static local:Resources.lang_pt}" />
                            <ComboBoxItem Content="{x:Static local:Resources.lang_it}" />
                        </ComboBox>
                        <controls:ToggleSwitch
                            x:Name="ChbxAutostart"
                            Grid.Row="2"
                            Width="467"
                            Padding="0"
                            VerticalAlignment="Top"
                            BorderThickness="0"
                            Content="{x:Static local:Resources.sw_tcSystem_Autostart}"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxAutostartChecked" />
                        <controls:ToggleSwitch
                            x:Name="ChbxMinimizeSystray"
                            Grid.Row="3"
                            Width="467"
                            Height="32"
                            VerticalAlignment="Top"
                            Content="{x:Static local:Resources.sw_tcSystem_Minimize}"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxMinimizeSystrayChecked" />
                        <StackPanel Grid.Row="4" Orientation="Vertical">
                            <controls:ToggleSwitch
                            x:Name="ChbxOpenQueueOnStartup"
                            Width="467"
                            Height="32"
                            VerticalAlignment="Top"
                            Content="{x:Static local:Resources.Sw_System_OpenQueueOnStartup}"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxOpenQueueOnStartup_Toggled" />
                            <controls:ToggleSwitch
                            x:Name="TglDonationReminder"
                                Width="467"
                            Height="32"
                            VerticalAlignment="Top"
                            Content="Disable donation reminder"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="TglDonationReminder_OnToggled"
                            />
                        </StackPanel>

                        <Label
                            Grid.Row="5"
                            Padding="0,5,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static local:Resources.sw_tcSystem_ChromeFetchRate}" />
                        <controls:NumericUpDown
                            x:Name="NudChrome"
                            Grid.Row="5"
                            Width="145"
                            Height="28"
                            Padding="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Interval="1"
                            Maximum="10"
                            Minimum="1"
                            NumericInputMode="Numbers"
                            ValueChanged="NudChrome_ValueChanged" />
                        <controls:ToggleSwitch 
                            x:Name="TglUseDefaultBrowser" Grid.Row="6"
                                               Width="467"
                                               Height="32"
                                               VerticalAlignment="Top"
                                               Content="{x:Static local:Resources.sw_tcSystem_UseDefaultBrowser}"
                                               ContentPadding="0"
                                               Focusable="False"
                                               FontFamily="Segoe UI"
                                               FontSize="12"
                                               Toggled="TglUseDefaultBrowser_OnToggled"
                                               />
                        <Label
                            Grid.Row="7"
                            Padding="0,5,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static local:Resources.Sw_System_PrivacyHeader}"
                            FontSize="16" />
                        <controls:ToggleSwitch
                            x:Name="ToggleSwitchPrivacy"
                            Grid.Row="8"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ContentPadding="0"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            OffContent="{x:Static local:Resources.Sw_System_Privacy}"
                            OnContent="{x:Static local:Resources.Sw_System_Privacy}"
                            Toggled="ToggleSwitchPrivacy_Toggled" />
                        <Label
                            x:Name="LabelColor"
                            Grid.Row="10"
                            Width="71"
                            Padding="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static local:Resources.sw_Appearance_Color}" />
                        <ComboBox
                            x:Name="ComboBoxColor"
                            Grid.Row="11"
                            Width="234"
                            Height="23"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            SelectionChanged="ComboBoxColorSelectionChanged" />
                        <controls:ToggleSwitch
                            x:Name="ThemeToggleSwitch"
                            Grid.Row="11"
                            Width="145"
                            Height="32"
                            Padding="5,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            ContentPadding="0"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            OffContent="{x:Static local:Resources.sw_Appearance_ThemeLight}"
                            OnContent="{x:Static local:Resources.sw_Appearance_ThemeDark}"
                            Toggled="ThemeToggleSwitchIsCheckedChanged" />
                        <Label
                            Grid.Row="9"
                            Padding="0,5,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static local:Resources.sw_tc_Appearance}"
                            FontSize="16" />
                        <Label
                            Grid.Row="1"
                            Padding="0,5,5,5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static local:Resources.sw_tcSystem_Behavior}"
                            FontSize="16" />
                    </Grid>
                </Border>
            </TabItem>
            <TabItem Header="{x:Static local:Resources.sw_tc_Output}">
                <Border
                    Margin="10,0,0,0"
                    BorderBrush="{DynamicResource MahApps.Brushes.Accent3}"
                    BorderThickness="2,0,0,0">
                    <Grid Margin="10,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="38" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="38" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="72*" />
                            <ColumnDefinition Width="95*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Width="99"
                            Height="32"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="{x:Static local:Resources.sw_tcOutput_Directory}" />
                        <TextBox
                            x:Name="TxtbxOutputdirectory"
                            Grid.Row="0"
                            Grid.Column="1"
                            Height="26"
                            Margin="0,0,64,0"
                            VerticalAlignment="Center"
                            IsReadOnly="True"
                            TextWrapping="Wrap" />
                        <Button
                            x:Name="BtnOutputdirectory"
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="26"
                            Height="26"
                            Margin="0,0,32,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="BtnOutputdirectoryClick"
                            Content="..."
                            RenderTransformOrigin="-1.138,0.407" />
                        <Button
                            x:Name="BtnCopyToClip"
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="26"
                            Height="26"
                            Padding="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="BtnCopyToClipClick"
                            Focusable="False"
                            ToolTip="Copy to Clipboard">

                            <iconPacks:PackIconFontAwesome
                                Width="15"
                                Height="15"
                                Margin="-1,-1,-1,-1"
                                Kind="LinkSolid" />
                        </Button>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Height="32"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="{x:Static local:Resources.sw_tcOutput_Format}" />
                        <TextBox
                            x:Name="TxtbxOutputformat"
                            Grid.Row="1"
                            Grid.Column="1"
                            Height="26"
                            VerticalAlignment="Center"
                            TextChanged="TxtbxOutputformat_TextChanged"
                            TextWrapping="NoWrap">
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem
                                        x:Name="MenuBtnArtist"
                                        Click="MenuBtnArtist_Click"
                                        Header="Artist"
                                        Tag="1" />
                                    <MenuItem
                                        x:Name="MenuBtnTitle"
                                        Click="MenuBtnTitle_Click"
                                        Header="Title"
                                        Tag="1" />
                                    <MenuItem
                                        x:Name="MenuBtnExtra"
                                        Click="MenuBtnExtra_Click"
                                        Header="Extra"
                                        Tag="1" />
                                    <MenuItem
                                        x:Name="MenuBtnReq"
                                        Click="MenuBtnReq_Click"
                                        Header="Requester"
                                        Tag="1" />
                                    <MenuItem
                                        x:Name="MenuBtnUrl"
                                        Click="MenuBtnUrl_Click"
                                        Header="URL"
                                        Tag="1" />
                                    <MenuItem
                                        x:Name="MenuBtnReturn"
                                        Click="MenuBtnReturn_Click"
                                        Header="New Line"
                                        Tag="1" />
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>
                        <controls:ToggleSwitch
                            x:Name="ChbxCustomPause"
                            Grid.Row="4"
                            Grid.Column="0"
                            Height="32"
                            HorizontalAlignment="Stretch"
                            Content="{x:Static local:Resources.sw_tcOutput_PauseText}"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxCustompauseChecked" />
                        <TextBox
                            x:Name="TxtbxCustompausetext"
                            Grid.Row="4"
                            Grid.Column="1"
                            Height="26"
                            VerticalAlignment="Center"
                            controls:TextBoxHelper.Watermark="{x:Static local:Resources.sw_tcOutput_PauseWatermark}"
                            IsEnabled="False"
                            TextChanged="TxtbxCustompausetext_TextChanged"
                            TextWrapping="Wrap" />
                        <controls:ToggleSwitch
                            x:Name="ChbxUpload"
                            Grid.Row="5"
                            Grid.Column="0"
                            Height="32"
                            HorizontalAlignment="Stretch"
                            Content="{x:Static local:Resources.sw_tcOutput_UploadSongInfo}"
                            ContentDirection="RightToLeft"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxUpload_Checked" />
                        <controls:ToggleSwitch
                            x:Name="ChbxCover"
                            Grid.Row="8"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Height="32"
                            HorizontalAlignment="Stretch"
                            Content="{x:Static local:Resources.sw_tcOutput_DownloadAlbum}"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxCover_Checked" />
                        <Button
                            x:Name="BtnCopyUrl"
                            Grid.Row="5"
                            Grid.Column="1"
                            Width="26"
                            Height="26"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="BtnCopyURL_Click">
                            <iconPacks:PackIconFontAwesome
                                Width="15"
                                Height="15"
                                Margin="-1,-2,-1,-2"
                                Kind="LinkSolid" />
                        </Button>
                        <controls:ToggleSwitch
                            x:Name="ChbxSplit"
                            Grid.Row="6"
                            Grid.ColumnSpan="2"
                            Grid.Column="0"
                            Height="32"
                            HorizontalAlignment="Stretch"
                            Content="{x:Static local:Resources.sw_tcOutput_SplitArtist}"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxSplit_Checked" />
                        <Label Grid.Row="7" Grid.Column="0" Content="{x:Static local:Resources.sw_tcOutput_RequesterPrefix}" VerticalAlignment="Center"/>
                        <TextBox  Grid.Row="7" Grid.Column="1" x:Name="TbRequesterPrefix" Height="26" VerticalAlignment="Center" TextChanged="TbRequesterPrefix_TextChanged"/>
                        <CheckBox
                            x:Name="ChbxSpaces"
                            Grid.Row="3"
                            Grid.Column="1"
                            Height="18"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Checked="ChbxSpaces_Checked"
                            Content="{x:Static local:Resources.sw_tcOutput_AddSpaces}"
                            RenderTransformOrigin="0.47,1.039"
                            Unchecked="ChbxSpaces_Checked" />
                        <controls:NumericUpDown
                            x:Name="NudSpaces"
                            Grid.Row="3"
                            Grid.Column="1"
                            Width="121"
                            Height="26"
                            Margin="131,0,0,0"
                            Padding="0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Interval="1"
                            Minimum="1"
                            NumericInputMode="Numbers"
                            UpDownButtonsWidth="16"
                            ValueChanged="nud_Spaces_ValueChanged" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Height="32"
                            MinWidth="160"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Content="{x:Static local:Resources.sw_tcOutput_Format2}"
                            Visibility="Collapsed" />
                        <TextBox
                            x:Name="TxtbxOutputformat2"
                            Grid.Row="2"
                            Grid.Column="1"
                            Height="26"
                            VerticalAlignment="Center"
                            TextChanged="TxtbxOutputformat2_TextChanged"
                            TextWrapping="NoWrap"
                            Visibility="Collapsed">
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem
                                        x:Name="MenuBtnArtist2"
                                        Click="MenuBtnArtist_Click"
                                        Header="Artist"
                                        Tag="2" />
                                    <MenuItem
                                        x:Name="MenuBtnTitle2"
                                        Click="MenuBtnTitle_Click"
                                        Header="Title"
                                        Tag="2" />
                                    <MenuItem
                                        x:Name="MenuBtnExtra2"
                                        Click="MenuBtnExtra_Click"
                                        Header="Extra"
                                        Tag="2" />
                                    <MenuItem
                                        x:Name="MenuBtnReq2"
                                        Click="MenuBtnReq_Click"
                                        Header="Requester"
                                        Tag="2" />
                                    <MenuItem
                                        x:Name="MenuBtnUrl2"
                                        Click="MenuBtnUrl_Click"
                                        Header="URL"
                                        Tag="2" />
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>
                    </Grid>
                </Border>
            </TabItem>
            <TabItem x:Name="TabItemTwitch" Header="{x:Static local:Resources.sw_tc_Integration}">
                <Border
                    Margin="10,0,0,0"
                    BorderBrush="{DynamicResource MahApps.Brushes.Accent3}"
                    BorderThickness="2,0,0,0">
                    <Grid Margin="10,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <DockPanel x:Name="PnlTwich" Margin="0,6,0,6">
                                <Border
                                    Width="60"
                                    Height="60"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    BorderThickness="3"
                                    CornerRadius="40">
                                    <Border.Background>
                                        <ImageBrush
                                            x:Name="ImgTwitchProfile"
                                            ImageSource="/songify.ico"
                                            Stretch="Fill" />
                                    </Border.Background>
                                </Border>
                                <StackPanel
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Right"
                                    Orientation="Vertical">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            x:Name="LblTwitchName"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Content="{x:Static local:Resources.sw_Integration_Twitch}"
                                            Tag="main" />
                                        <Button
                                            x:Name="BtnTwitchLogout"
                                            Grid.Column="1"
                                            Margin="16,0,0,0"
                                            VerticalAlignment="Center"
                                            Click="BtnTwitchLogout_OnClick"
                                            Tag="Main"
                                            ToolTip="{x:Static local:Resources.sw_Twitch_LogOut}">
                                            <Button.Style>
                                                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=BtnLogInTwitch, Path=Visibility}" Value="Collapsed">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ElementName=BtnLogInTwitch, Path=Visibility}" Value="Visible">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                            <iconPacks:ForkAwesome
                                                Width="15"
                                                Height="15"
                                                Kind="SignOut" />
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </DockPanel>
                            <DockPanel
                                x:Name="PnlTwichBot"
                                Grid.Row="0"
                                Grid.Column="1"
                                Margin="0,6,0,6">
                                <Border
                                    Width="60"
                                    Height="60"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    BorderThickness="3"
                                    CornerRadius="40">
                                    <Border.Background>
                                        <ImageBrush
                                            x:Name="ImgTwitchBotProfile"
                                            ImageSource="/songify.ico"
                                            Stretch="Fill" />
                                    </Border.Background>
                                </Border>
                                <StackPanel
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Right"
                                    Orientation="Vertical">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Label
                                            x:Name="LblTwitchBotName"
                                            Grid.Column="0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Content="Twitch Bot"
                                            Tag="bot" />
                                        <Button
                                            x:Name="BtnTwitchBotLogout"
                                            Grid.Column="1"
                                            Margin="16,0,0,0"
                                            VerticalAlignment="Center"
                                            Click="BtnTwitchLogout_OnClick"
                                            Tag="Bot"
                                            ToolTip="{x:Static local:Resources.sw_Twitch_LogOut}">
                                            <iconPacks:ForkAwesome
                                                Width="15"
                                                Height="15"
                                                Kind="SignOut" />
                                            <Button.Style>
                                                <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ElementName=BtnLogInTwitch, Path=Visibility}" Value="Collapsed">
                                                            <Setter Property="Visibility" Value="Visible" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding ElementName=BtnLogInTwitch, Path=Visibility}" Value="Visible">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </DockPanel>
                            <Button
                                x:Name="BtnLogInTwitch"
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="6,0,6,0"
                                VerticalAlignment="Bottom"
                                Click="BtnLogInTwitch_Click">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:ForkAwesome Kind="Twitch" />
                                        <TextBlock Margin="6,0,0,0" Text="{x:Static local:Resources.mw_menu_Twitch_TwitchLogin}" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button
                                x:Name="BtnLogInTwitchBot"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="6,0,6,0"
                                VerticalAlignment="Bottom"
                                Click="BtnLogInTwitchBot_OnClick">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <iconPacks:ForkAwesome Kind="Twitch" />
                                        <TextBlock Margin="6,0,0,0" Text="{x:Static local:Resources.mw_menu_Twitch_TwitchLogin}" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </Grid>

                        <!--#region Twitch Credentials (not using API)-->
                        <controls:ToggleSwitch
                            x:Name="CheckShowCred"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,6,0,6"
                            HorizontalAlignment="Right"
                            Content="{x:Static local:Resources.sw_Integration_ShowCreds}"
                            IsOn="False" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="6,6,6,6"
                            VerticalAlignment="Center"
                            Content="Chat Account" />
                        <ComboBox
                            x:Name="CbAccountSelection"
                            Grid.Row="1"
                            Grid.Column="0"
                            Width="164"
                            Margin="90,6,0,6"
                            HorizontalAlignment="Left"
                            SelectionChanged="CbAccountSelection_SelectionChanged" />
                        <Grid
                            Grid.Row="2"
                            Grid.Column="0"
                            Grid.ColumnSpan="2">
                            <Grid.Style>
