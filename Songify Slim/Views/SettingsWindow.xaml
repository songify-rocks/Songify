<controls:MetroWindow
    x:Class="Songify_Slim.Views.Window_Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:general="clr-namespace:Songify_Slim.Util.General"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Songify_Slim.Properties"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:Songify_Slim.UserControls"
    Title="{DynamicResource mw_menu_Settings}"
    Width="860"
    Height="490"
    MinHeight="400"
    d:Title="{x:Static local:Resources.mw_menu_Settings}"
    Closing="MetroWindow_Closing"
    Loaded="SettingsWindow_Loaded"
    LocationChanged="MetroWindow_LocationChanged"
    ResizeMode="CanResizeWithGrip"
    SizeChanged="MetroWindow_SizeChanged"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <controls:MetroWindow.Resources>
        <general:LastItemVisibilityConverter x:Key="LastItemVisibilityConverter" />
        <Style
            x:Key="TextBoxTextBlock"
            BasedOn="{StaticResource {x:Type TextBox}}"
            TargetType="TextBox">
            <Style.Setters>
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Margin" Value="0,0,0,0" />
                <Setter Property="Padding" Value="0,0,0,0" />
                <Setter Property="MinHeight" Value="0" />
                <Setter Property="Height" Value="18" />
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent4}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </controls:MetroWindow.Resources>
    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>
            <Button
                x:Name="BtnResponseParams"
                d:Content="{x:Static local:Resources.sw_ResponseVariables}"
                Click="BtnResponseParams_OnClick"
                Content="{DynamicResource sw_ResponseVariables}" />
        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>
    <Grid>
        <Grid
            x:Name="GridLoading"
            Background="#CC000000"
            Visibility="Collapsed"
            ZIndex="10001">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <TextBlock
                    Margin="0,0,0,6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="Getting things ready" />
                <controls:ProgressRing Foreground="{DynamicResource MahApps.Brushes.Accent}" />
            </StackPanel>
        </Grid>
        <TabControl
            x:Name="TabCtrl"
            Margin="10,0,10,0"
            TabStripPlacement="Left">
            <TabItem d:Header="{x:Static local:Resources.sw_tc_System}" Header="{DynamicResource sw_tc_System}">
                <Border
                    Margin="10,0,0,0"
                    BorderBrush="{DynamicResource MahApps.Brushes.Accent3}"
                    BorderThickness="2,0,0,0">
                    <ScrollViewer>
                        <Grid Margin="10,12,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <Label
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    d:Content="{x:Static local:Resources.sw_tcSystem_lblLanguage}"
                                    Content="{DynamicResource sw_tcSystem_lblLanguage}" />
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontSize="9">
                                    <Run>(</Run>
                                    <Hyperlink NavigateUri="https://translate.songify.rocks/" RequestNavigate="Hyperlink_OnRequestNavigate">
                                        Translate!
                                    </Hyperlink>
                                    <Run>)</Run></TextBlock>
                            </StackPanel>
                            <ComboBox
                                x:Name="CbxLanguage"
                                Grid.Row="0"
                                Width="220"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Value"
                                SelectedValuePath="Key"
                                SelectionChanged="ComboBox_SelectionChanged"
                                TabIndex="1" />
                            <Label
                                Grid.Row="1"
                                Padding="0,5,5,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                d:Content="{x:Static local:Resources.sw_tcSystem_Behavior}"
                                Content="{DynamicResource sw_tcSystem_Behavior}" />
                            <StackPanel Grid.Row="2" Orientation="Vertical">
                                <controls:ToggleSwitch
                                    x:Name="ChbxAutostart"
                                    Width="467"
                                    Padding="0"
                                    VerticalAlignment="Top"
                                    d:Content="{x:Static local:Resources.sw_tcSystem_Autostart}"
                                    BorderThickness="0"
                                    Content="{DynamicResource sw_tcSystem_Autostart}"
                                    ContentPadding="0"
                                    Focusable="False"
                                    FontFamily="Segoe UI"
                                    FontSize="12"
                                    TabIndex="2"
                                    Toggled="ChbxAutostartChecked" />
                                <controls:ToggleSwitch
                                    x:Name="ChbxMinimizeSystray"
                                    Width="467"
                                    Height="32"
                                    VerticalAlignment="Top"
                                    d:Content="{x:Static local:Resources.sw_tcSystem_Minimize}"
                                    Content="{DynamicResource sw_tcSystem_Minimize}"
                                    ContentPadding="0"
                                    Focusable="False"
                                    FontFamily="Segoe UI"
                                    FontSize="12"
                                    TabIndex="3"
                                    Toggled="ChbxMinimizeSystrayChecked" />
                                <controls:ToggleSwitch
                                    x:Name="TglBetaUpdates"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    d:Content="{x:Static local:Resources.sw_Config_GetBetaUpdates}"
                                    Content="{DynamicResource sw_Config_GetBetaUpdates}"
                                    FontSize="12"
                                    TabIndex="4"
                                    Toggled="TglBetaUpdates_Toggled" />
                                <controls:ToggleSwitch
                                    x:Name="ChbxOpenQueueOnStartup"
                                    Width="467"
                                    Height="32"
                                    VerticalAlignment="Top"
                                    d:Content="{x:Static local:Resources.Sw_System_OpenQueueOnStartup}"
                                    Content="{DynamicResource Sw_System_OpenQueueOnStartup}"
                                    ContentPadding="0"
                                    Focusable="False"
                                    FontFamily="Segoe UI"
                                    FontSize="12"
                                    TabIndex="5"
                                    Toggled="ChbxOpenQueueOnStartup_Toggled" />
                                <controls:ToggleSwitch
                                    x:Name="TglDonationReminder"
                                    Width="467"
                                    Height="32"
                                    VerticalAlignment="Top"
                                    d:Content="{x:Static local:Resources.Sw_System_DisableDonationReminder}"
                                    Content="{DynamicResource Sw_System_DisableDonationReminder}"
                                    ContentPadding="0"
                                    Focusable="False"
                                    FontFamily="Segoe UI"
                                    FontSize="12"
                                    TabIndex="6"
                                    Toggled="TglDonationReminder_OnToggled" />
                            </StackPanel>
                            <Label
                                Grid.Row="3"
                                Padding="0,5,5,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                d:Content="{x:Static local:Resources.sw_tcSystem_ChromeFetchRate}"
                                Content="{DynamicResource sw_tcSystem_ChromeFetchRate}" />
                            <controls:NumericUpDown
                                x:Name="NudChrome"
                                Grid.Row="3"
                                Width="145"
                                Height="28"
                                Padding="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Interval="1"
                                Maximum="10"
                                Minimum="1"
                                NumericInputMode="Numbers"
                                TabIndex="7"
                                ValueChanged="NudChrome_ValueChanged" />
                            <controls:ToggleSwitch
                                x:Name="TglUseDefaultBrowser"
                                Grid.Row="4"
                                Width="467"
                                Height="32"
                                VerticalAlignment="Top"
                                d:Content="{DynamicResource sw_tcSystem_UseDefaultBrowser}"
                                Content="{x:Static local:Resources.sw_tcSystem_UseDefaultBrowser}"
                                ContentPadding="0"
                                Focusable="False"
                                FontFamily="Segoe UI"
                                FontSize="12"
                                TabIndex="8"
                                Toggled="TglUseDefaultBrowser_OnToggled" />
                            <Label
                                Grid.Row="5"
                                Padding="0,5,5,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                d:Content="{x:Static local:Resources.Sw_System_PrivacyHeader}"
                                Content="{DynamicResource Sw_System_PrivacyHeader}"
                                FontSize="16"
                                Visibility="Collapsed" />
                            <controls:ToggleSwitch
                                x:Name="ToggleSwitchPrivacy"
                                Grid.Row="6"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                d:OffContent="{x:Static local:Resources.Sw_System_Privacy}"
                                d:OnContent="{x:Static local:Resources.Sw_System_Privacy}"
                                ContentPadding="0"
                                FontFamily="Segoe UI"
                                FontSize="12"
                                OffContent="{DynamicResource Sw_System_Privacy}"
                                OnContent="{DynamicResource Sw_System_Privacy}"
                                Toggled="ToggleSwitchPrivacy_Toggled"
                                Visibility="Collapsed" />
                            <Label
                                Grid.Row="7"
                                Padding="0,5,5,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                d:Content="{x:Static local:Resources.sw_tc_Appearance}"
                                Content="{DynamicResource sw_tc_Appearance}"
                                FontSize="16" />
                            <Label
                                x:Name="LabelColor"
                                Grid.Row="8"
                                Width="71"
                                Padding="5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                d:Content="{x:Static local:Resources.sw_Appearance_Color}"
                                Content="{DynamicResource sw_Appearance_Color}"
                                Visibility="Collapsed" />
                            <ComboBox
                                x:Name="ComboBoxColor"
                                Grid.Row="8"
                                Width="234"
                                Height="23"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                SelectionChanged="ComboBoxColorSelectionChanged"
                                TabIndex="9" />
                            <controls:ToggleSwitch
                                x:Name="ThemeToggleSwitch"
                                Grid.Row="8"
                                Width="145"
                                Height="32"
                                Padding="5,0,0,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                d:OffContent="{x:Static local:Resources.sw_Appearance_ThemeLight}"
                                d:OnContent="{x:Static local:Resources.sw_Appearance_ThemeDark}"
                                ContentPadding="0"
                                FontFamily="Segoe UI"
                                FontSize="12"
                                OffContent="{DynamicResource sw_Appearance_ThemeLight}"
                                OnContent="{DynamicResource sw_Appearance_ThemeDark}"
                                TabIndex="10"
                                Toggled="ThemeToggleSwitchIsCheckedChanged" />
                            <DockPanel Grid.Row="9" Margin="0,6">
                                <TextBlock VerticalAlignment="Center" Text="Songify API Token" />
                                <Grid Margin="6,0,0,0">
                                    <!--  Password Box  -->
                                    <PasswordBox
                                        x:Name="PasswordBox"
                                        Height="30"
                                        Padding="0,0,30,0"
                                        VerticalContentAlignment="Center"
                                        PasswordChanged="PasswordBox_OnPasswordChanged" />
                                    <!--  Text Box (plain text)  -->
                                    <TextBox
                                        x:Name="TextBox"
                                        Height="30"
                                        Padding="0,0,30,0"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        TextChanged="TextBox_OnTextChanged"
                                        Visibility="Collapsed" />
                                    <!--  Eye Icon Button  -->
                                    <Button
                                        x:Name="ShowHideButton"
                                        Width="24"
                                        Height="24"
                                        MinWidth="0"
                                        Margin="0,0,3,0"
                                        Padding="0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        Click="ShowHideButton_OnClickn_Click"
                                        Style="{DynamicResource MahApps.Styles.Button.Chromeless}">
                                        <iconPacks:PackIconFontAwesome
                                            x:Name="EyeIcon"
                                            Width="20"
                                            Height="20"
                                            Kind="EyeSlashSolid" />
                                    </Button>
                                </Grid>
                            </DockPanel>


                        </Grid>
                    </ScrollViewer>
                </Border>
            </TabItem>
            <TabItem d:Header="{x:Static local:Resources.sw_tc_Output}" Header="{DynamicResource sw_tc_Output}">
                <Border
                    Margin="10,0,0,0"
                    BorderBrush="{DynamicResource MahApps.Brushes.Accent3}"
                    BorderThickness="2,0,0,0">
                    <Grid Margin="10,12,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="38" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="0" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="38" />
                            <RowDefinition Height="38" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="72*" />
                            <ColumnDefinition Width="95*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Width="99"
                            Height="32"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            d:Content="{x:Static local:Resources.sw_tcOutput_Directory}"
                            Content="{DynamicResource sw_tcOutput_Directory}" />
                        <TextBox
                            x:Name="TxtbxOutputdirectory"
                            Grid.Row="0"
                            Grid.Column="1"
                            Height="26"
                            Margin="0,0,64,0"
                            VerticalAlignment="Center"
                            IsReadOnly="True"
                            TextWrapping="NoWrap" />
                        <Button
                            x:Name="BtnOutputdirectory"
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="26"
                            Height="26"
                            Margin="0,0,32,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="BtnOutputdirectoryClick"
                            Content="..."
                            RenderTransformOrigin="-1.138,0.407" />
                        <Button
                            x:Name="BtnCopyToClip"
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="26"
                            Height="26"
                            Padding="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Click="BtnCopyToClipClick"
                            Focusable="False"
                            ToolTip="Copy to Clipboard">

                            <iconPacks:PackIconFontAwesome
                                Width="15"
                                Height="15"
                                Margin="-1,-1,-1,-1"
                                Kind="LinkSolid" />
                        </Button>
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Height="32"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            d:Content="{x:Static local:Resources.sw_tcOutput_Format}"
                            Content="{DynamicResource sw_tcOutput_Format}" />
                        <TextBox
                            x:Name="TxtbxOutputformat"
                            Grid.Row="1"
                            Grid.Column="1"
                            Height="26"
                            VerticalAlignment="Center"
                            TextChanged="TxtbxOutputformat_TextChanged"
                            TextWrapping="NoWrap">
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem
                                        x:Name="MenuBtnArtist"
                                        Click="MenuBtnArtist_Click"
                                        Header="Artist"
                                        Tag="1" />
                                    <MenuItem
                                        x:Name="MenuBtnTitle"
                                        Click="MenuBtnTitle_Click"
                                        Header="Title"
                                        Tag="1" />
                                    <MenuItem
                                        x:Name="MenuBtnExtra"
                                        Click="MenuBtnExtra_Click"
                                        Header="Extra"
                                        Tag="1" />
                                    <MenuItem
                                        x:Name="MenuBtnReq"
                                        Click="MenuBtnReq_Click"
                                        Header="Requester"
                                        Tag="1" />
                                    <MenuItem
                                        x:Name="MenuBtnUrl"
                                        Click="MenuBtnUrl_Click"
                                        Header="URL"
                                        Tag="1" />
                                    <MenuItem
                                        x:Name="MenuBtnReturn"
                                        Click="MenuBtnReturn_Click"
                                        Header="New Line"
                                        Tag="1" />
                                </ContextMenu>
                            </TextBox.ContextMenu>
                        </TextBox>
                        <Label
                            Grid.Row="4"
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            d:Content="{x:Static local:Resources.sw_tcOutput_pause}"
                            Content="{DynamicResource sw_tcOutput_pause}" />
                        <!--<controls:ToggleSwitch
                            x:Name="ChbxCustomPause"
                            Grid.Row="4"
                            Grid.Column="0"
                            Height="32"
                            HorizontalAlignment="Stretch"
                            Content="{x:Static local:Resources.sw_tcOutput_PauseText}"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxCustompauseChecked" />-->
                        <StackPanel
                            Grid.Row="4"
                            Grid.Column="1"
                            Orientation="Vertical">
                            <ComboBox
                                x:Name="CbPauseOptions"
                                Height="26"
                                Margin="0,0,0,6"
                                SelectionChanged="CbPauseOptions_SelectionChanged">
                                <ComboBoxItem d:Content="{x:Static local:Resources.sw_tcOutput_onPause_DoNothing}" Content="{DynamicResource sw_tcOutput_onPause_DoNothing}" />
                                <ComboBoxItem d:Content="{x:Static local:Resources.sw_tcOutput_onPause_UseCustomPauseText}" Content="{DynamicResource sw_tcOutput_onPause_UseCustomPauseText}" />
                                <ComboBoxItem d:Content="{x:Static local:Resources.sw_tcOutput_onPause_ClearAllOutput}" Content="{DynamicResource sw_tcOutput_onPause_ClearAllOutput}" />
                            </ComboBox>
                            <controls:ToggleSwitch
                                x:Name="tgl_KeepCover"
                                Margin="0,0,0,6"
                                HorizontalAlignment="Right"
                                Content="Keep album cover"
                                Toggled="Tgl_KeepCover_OnToggled">
                                <controls:ToggleSwitch.Style>
                                    <Style TargetType="controls:ToggleSwitch">
                                        <Setter Property="IsEnabled" Value="True" />
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=CbPauseOptions}" Value="0">
                                                <Setter Property="IsEnabled" Value="False" />
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </controls:ToggleSwitch.Style>
                            </controls:ToggleSwitch>
                            <TextBox
                                x:Name="TxtbxCustompausetext"
                                Height="26"
                                VerticalAlignment="Center"
                                controls:TextBoxHelper.Watermark="{DynamicResource sw_tcOutput_PauseWatermark}"
                                TextChanged="TxtbxCustompausetext_TextChanged"
                                TextWrapping="Wrap">
                                <TextBox.Style>
                                    <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                                        <Setter Property="IsEnabled" Value="False" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedIndex, ElementName=CbPauseOptions}" Value="1">
                                                <Setter Property="IsEnabled" Value="True" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>

                        <controls:ToggleSwitch
                            x:Name="ChbxUpload"
                            Grid.Row="5"
                            Grid.Column="0"
                            Height="32"
                            HorizontalAlignment="Stretch"
                            d:Content="{x:Static local:Resources.sw_tcOutput_UploadSongInfo}"
                            Content="{DynamicResource sw_tcOutput_UploadSongInfo}"
                            ContentDirection="RightToLeft"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxUpload_Checked"
                            Visibility="Collapsed" />
                        <controls:ToggleSwitch
                            x:Name="ChbxCover"
                            Grid.Row="8"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Height="32"
                            HorizontalAlignment="Stretch"
                            d:Content="{x:Static local:Resources.sw_tcOutput_DownloadAlbum}"
                            Content="{DynamicResource sw_tcOutput_DownloadAlbum}"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxCover_Checked" />
                        <controls:ToggleSwitch
                            x:Name="TglCanvas"
                            Grid.Row="9"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Height="32"
                            HorizontalAlignment="Stretch"
                            d:Content="{x:Static local:Resources.sw_tcOutput_DownloadCanvas}"
                            Content="{DynamicResource sw_tcOutput_DownloadCanvas}"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="TglCanvas_OnToggled" />
                        <StackPanel
                            Grid.Row="5"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="6"
                                VerticalAlignment="Center"
                                Text="Copy song url" />
                            <Button
                                x:Name="BtnCopyUrl"
                                Width="26"
                                Height="26"
                                VerticalAlignment="Center"
                                Click="BtnCopyURL_Click">
                                <iconPacks:PackIconFontAwesome
                                    Width="15"
                                    Height="15"
                                    Margin="-1,-2,-1,-2"
                                    Kind="LinkSolid" />
                            </Button>
                        </StackPanel>
                        <controls:ToggleSwitch
                            x:Name="ChbxSplit"
                            Grid.Row="6"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            Height="32"
                            HorizontalAlignment="Stretch"
                            d:Content="{x:Static local:Resources.sw_tcOutput_SplitArtist}"
                            Content="{DynamicResource sw_tcOutput_SplitArtist}"
                            ContentPadding="0"
                            Focusable="False"
                            FontFamily="Segoe UI"
                            FontSize="12"
                            Toggled="ChbxSplit_Checked"
                            Visibility="Collapsed" />
                        <Label
                            Grid.Row="7"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Content="{x:Static local:Resources.sw_tcOutput_RequesterPrefix}" />
                        <TextBox
                            x:Name="TbRequesterPrefix"
                            Grid.Row="7"
                            Grid.Column="1"
                            Height="26"
                            VerticalAlignment="Center"
                            TextChanged="TbRequesterPrefix_TextChanged" />
                        <Grid Grid.Row="3" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <CheckBox
                                x:Name="ChbxSpaces"
                                Grid.Row="0"
                                Grid.Column="0"
                                Height="18"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                d:Content="{x:Static local:Resources.sw_tcOutput_AddSpaces}"
                                Checked="ChbxSpaces_Checked"
                                Content="{DynamicResource sw_tcOutput_AddSpaces}"
                                RenderTransformOrigin="0.47,1.039"
                                Unchecked="ChbxSpaces_Checked" />
                            <controls:NumericUpDown
                                x:Name="NudSpaces"
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="121"
                                Height="26"
                                Margin="0,0,0,0"
                                Padding="0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Interval="1"
                                Minimum="1"
                                NumericInputMode="Numbers"
                                UpDownButtonsWidth="16"
                                ValueChanged="Nud_Spaces_ValueChanged" />
                            <CheckBox
                                x:Name="ChbxSpacesSplitFiles"
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="0,0,0,6"
                                d:Content="{x:Static local:Resources.sw_tcOutput_ApplyToSplitFilesToo}"
                                Checked="ChbxSpacesSplitFiles_Checked"
                                Content="{DynamicResource sw_tcOutput_ApplyToSplitFilesToo}"
                                Unchecked="ChbxSpacesSplitFiles_Checked" />
                        </Grid>

                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Height="32"
                            MinWidth="160"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            d:Content="{x:Static local:Resources.sw_tcOutput_Format2}"
                            Content="{DynamicResource sw_tcOutput_Format2}"
                            Visibility="Collapsed" />
                        <TextBox
                            x:Name="TxtbxOutputformat2"
                            Grid.Row="2"
                            Grid.Column="1"
                            Height="26"
                            VerticalAlignment="Center"
                            TextChanged="TxtbxOutputformat2_TextChanged"
                            TextWrapping="NoWrap"
                            Visibility="Collapsed">
                            <TextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem
                                        x:Name="MenuBtnArtist2"
                                        Click="MenuBtnArtist_Click"
                                        Header="Artist"
                                        Tag="2" />
