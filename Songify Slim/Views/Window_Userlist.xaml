<controls:MetroWindow
    x:Class="Songify_Slim.Views.WindowUserlist"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Songify_Slim.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:Songify_Slim.UserControls"
    Title="Viewerlist"
    Width="339"
    Height="328"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--<TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Margin="6,0,0,0"
            Text="SR" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            Margin="6,0,0,0"
            Text="Name" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="2"
            Margin="6,0,0,0"
            Text="Userlevel" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="3"
            Margin="6,0,0,0"
            Text="Sub Tier" />-->

        <ListBox
            x:Name="LbxUsers"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="6"
            SelectionMode="Single"
            Visibility="Collapsed">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="0" />
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <userControls:UcViewerItem />
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="MenuItem_OnClick" Header="Block user from song requests" />
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        <DataGrid
            x:Name="DgvViewers"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            AlternatingRowBackground="#0fffffff"
            AutoGenerateColumns="False"
            CanUserAddRows="False">

            <DataGrid.Columns>
                <DataGridTemplateColumn Width="auto" Header="SR">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border HorizontalAlignment="Center" VerticalAlignment="Center">
                                <iconPacks:PackIconMaterial Grid.Column="3">
                                    <iconPacks:PackIconMaterial.Style>
                                        <Style TargetType="iconPacks:PackIconMaterial">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsSrBlocked, Mode=OneWay}" Value="false">
                                                    <Setter Property="Kind" Value="CheckCircleOutline" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsSrBlocked, Mode=OneWay}" Value="true">
                                                    <Setter Property="Kind" Value="BlockHelper" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </iconPacks:PackIconMaterial.Style>
                                </iconPacks:PackIconMaterial>
                            </Border>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="*" Header="Name">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Orientation="Horizontal">
                                <iconPacks:PackIconMaterial>
                                    <iconPacks:PackIconMaterial.Style>
                                        <Style TargetType="iconPacks:PackIconMaterial">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding UserLevel}" Value="5">
                                                    <Setter Property="Kind" Value="VideoAccount" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding UserLevel}" Value="4">
                                                    <Setter Property="Kind" Value="Sword" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding UserLevel}" Value="3">
                                                    <Setter Property="Kind" Value="DiamondOutline" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </iconPacks:PackIconMaterial.Style>
                                </iconPacks:PackIconMaterial>
                                <TextBlock Margin="6,0,0,0" Text="{Binding DisplayName, Mode=OneWay}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding ReadableUserLevel, Mode=OneWay}"
                    Header="User level" />
                <DataGridTemplateColumn
                    Width="auto"
                    MinWidth="70"
                    Header="Sub Tier">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SubTier, Mode=OneWay}" Value="0">
                                                <Setter Property="Text" Value="-" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                        <Style.Setters>
                                            <Setter Property="Text" Value="{Binding SubTier, Mode=OneWay}" />
                                        </Style.Setters>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style BasedOn="{StaticResource {x:Type DataGridRow}}" TargetType="DataGridRow">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Accent}" />
                        </Trigger>
                        <!--<DataTrigger Binding="{Binding IsSrBlocked}" Value="true">
                            <Setter Property="Background" Value="IndianRed" />
                        </DataTrigger>-->
                    </Style.Triggers>
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</controls:MetroWindow>