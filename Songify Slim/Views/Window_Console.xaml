<mah:MetroWindow
    x:Class="Songify_Slim.Views.WindowConsole"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Songify_Slim.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:properties="clr-namespace:Songify_Slim.Properties"
    Title="{x:Static properties:Resources.mw_menu_Console}"
    Width="285"
    Height="285"
    MinHeight="285"
    MaxHeight="285"
    Closing="MetroWindow_Closing"
    IsWindowDraggable="False"
    Loaded="MetroWindow_Loaded"
    LostFocus="MetroWindow_LostFocus"
    ResizeMode="CanResize"
    ShowActivated="False"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    mc:Ignorable="d">
    <Window.Resources>
        <!--  Dark OxyPlot tracker tooltip  -->
        <ControlTemplate x:Key="DarkTrackerTemplate" TargetType="{x:Type ContentControl}">
            <Border
                Padding="6"
                Background="#2A2A2A"
                BorderBrush="#555"
                BorderThickness="1"
                CornerRadius="4">
                <TextBlock Foreground="#DDDDDD" Text="{Binding Text}" />
            </Border>
        </ControlTemplate>

    </Window.Resources>

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button
                x:Name="BtnAttachDetach"
                Click="BtnAttachDetach_OnClick"
                ToolTip="Detach / Attach Console">
                <iconPacks:PackIconBootstrapIcons
                    x:Name="IconDetach"
                    Width="22"
                    Height="22"
                    Kind="LayoutSidebar" />
            </Button>
            <Button
                x:Name="BtnClearConsole"
                Click="BtnClearConsole_OnClick"
                ToolTip="Clear Console">
                <iconPacks:PackIconBootstrapIcons
                    Width="22"
                    Height="22"
                    Kind="JournalX" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button
                x:Name="btnLog"
                Click="BtnLog_OnClick"
                Content="Log" />
            <Button
                x:Name="btnMetrics"
                Click="BtnMetrics_OnClick"
                Content="API Metrics" />

        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <TabControl>
        <TabItem x:Name="TiLog">
            <Grid Background="#252525">
                <RichTextBox
                    x:Name="richTextBox"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Background="#252525"
                    BorderThickness="0"
                    IsReadOnly="True"
                    TextChanged="richTextBox_TextChanged">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Padding" Value="0,0,15,0" />
                        </Style>
                    </RichTextBox.Resources>
                </RichTextBox>

            </Grid>
        </TabItem>
        <TabItem x:Name="TiMetrics">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    x:Name="BtnToGraph"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Click="BtnToGraph_OnClick"
                    Content="Graph" />

                <DataGrid
                    Grid.Row="1"
                    Margin="8"
                    AutoGenerateColumns="False"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    ItemsSource="{Binding Rows}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Key}"
                            Header="Endpoint" />
                        <DataGridTextColumn
                            Width="120"
                            Binding="{Binding RequestsPerMinute}"
                            Header="Requests / min" />
                    </DataGrid.Columns>
                </DataGrid>

            </Grid>

        </TabItem>
        <TabItem x:Name="TiGraph">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Button
                    x:Name="BtnToMetrics"
                    Grid.Row="0"
                    HorizontalAlignment="Right"
                    Click="BtnToMetrics_OnClick"
                    Content="Metrics" />
                <oxy:PlotView
                    Grid.Row="1"
                    Background="Transparent"
                    DefaultTrackerTemplate="{StaticResource DarkTrackerTemplate}"
                    Model="{Binding PlotModel}" />
            </Grid>
        </TabItem>
    </TabControl>

</mah:MetroWindow>
