<UserControl
    x:Class="Songify_Slim.UserControls.PsaControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Songify_Slim.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="0"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border
        x:Name="BorderMotd"
        Padding="15"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        BorderThickness="2"
        CornerRadius="0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Orientation="Horizontal">
                <TextBlock Text="Issued: " />
                <TextBlock x:Name="TbDate" />
            </StackPanel>
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Orientation="Horizontal">
                <TextBlock Text="Severity: " />
                <Border
                    x:Name="BorderSeverity"
                    Padding="6,0"
                    BorderThickness="1"
                    CornerRadius="3">
                    <TextBlock x:Name="TbSeverity" Foreground="{DynamicResource MahApps.Brushes.ThemeForeground}" />
                </Border>
            </StackPanel>
            <StackPanel
                Grid.Row="0"
                Grid.Column="2"
                Orientation="Horizontal">
                <TextBlock Text="Author: " />
                <TextBlock x:Name="TbAuthor" />
                <Button
                    x:Name="btnRead"
                    Margin="6,0"
                    Click="BtnRead_OnClick"
                    Style="{DynamicResource MahApps.Styles.Button.WindowCommands}"
                    ToolTip="Mark As Read">
                    <Button.Content>
                        <iconPacks:Material
                            x:Name="badgeIcon"
                            Width="12"
                            Height="12"
                            Kind="Read"
                            Spin="False"
                            SpinAutoReverse="False" />
                    </Button.Content>
                </Button>
            </StackPanel>
            <ScrollViewer Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="6" VerticalAlignment="Stretch">
                <TextBlock
                    x:Name="TbMessage"
                    Margin="6"
                    TextAlignment="Justify"
                    TextWrapping="Wrap" />
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
