<UserControl
    x:Class="Songify_Slim.UserControls.UcRewardItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Songify_Slim.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="220"
    HorizontalAlignment="Stretch"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Border
            x:Name="ImgBorder"
            Grid.Row="0"
            Grid.Column="0"
            Width="16"
            Height="16"
            CornerRadius="2">
            <Image
                x:Name="RewardImage"
                Width="14"
                Height="14"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Resources/img/default-1.png" />
        </Border>
        <TextBlock
            x:Name="TbRewardName"
            Grid.Row="0"
            Grid.Column="1"
            Margin="6,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Text="Reward"
            TextWrapping="Wrap" />
        <TextBlock
            x:Name="TbRewardCost"
            Grid.Row="0"
            Grid.Column="2"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Text="Cost"
            TextAlignment="Right" />
        <Grid
            x:Name="IconManagable"
            Grid.Row="0"
            Grid.Column="3"
            Margin="6,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            ToolTip="Can be managed from Songify."
            Visibility="Visible">
            <iconPacks:ForkAwesome
                Width="12"
                Height="12"
                Kind="Pencil"
                Spin="False"
                SpinAutoReverse="False" />
        </Grid>
        <Button
            x:Name="BtnDelete"
            Grid.Column="4"
            Margin="6,0,0,0"
            Click="ButtonBase_OnClick"
            Style="{DynamicResource MahApps.Styles.Button.Reveal}"
            Visibility="Collapsed">
            <Button.Content>
                <iconPacks:Coolicons
                    Width="14"
                    Height="14"
                    Kind="TrashEmpty" />
            </Button.Content>
        </Button>
    </Grid>
</UserControl>
