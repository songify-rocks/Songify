<UserControl
    x:Class="Songify_Slim.UserControls.UC_TwitchReward"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:Songify_Slim.UserControls"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="auto"
    Height="50"
    mc:Ignorable="d">
    <Grid Margin="12,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Column="0"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Border
                x:Name="ImgBorder"
                Width="40"
                Height="40"
                CornerRadius="2">
                <Image
                    x:Name="ImgReward"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Resources/img/default-1.png" />
            </Border>

            <TextBlock
                x:Name="TxtRewardname"
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                Text="Sample Reward" />
        </StackPanel>
        <StackPanel
            Grid.Column="1"
            Width="100"
            Margin="12,0,0,0"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Image
                x:Name="ImgCost"
                Width="20"
                Height="20"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Source="/Resources/img/default-1.png" />
            <TextBlock
                x:Name="TxtRewardcost"
                Margin="12,0,0,0"
                VerticalAlignment="Center"
                Text="500" />
        </StackPanel>
        <StackPanel
            Grid.Column="2"
            Margin="12,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <mah:ToggleSwitch
                x:Name="TglRewardActive"
                Width="45"
                MinWidth="0"
                Content=""
                Toggled="TglRewardActive_Toggled" />
        </StackPanel>
    </Grid>
</UserControl>
